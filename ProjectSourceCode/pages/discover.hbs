<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Discover - Movie Meter</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', sans-serif;
      background: #0a0a0a;
      min-height: 100vh;
      color: #fff;
    }

    /* Navbar */
    .navbar {
      background: rgba(15, 15, 15, 0.8);
      backdrop-filter: blur(20px);
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      padding: 16px 0;
      position: sticky;
      top: 0;
      z-index: 1000;
      box-shadow: 0 4px 24px rgba(0, 0, 0, 0.5);
    }

    .navbar-content {
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 32px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      gap: 20px;
    }

    .brand {
      display: flex;
      align-items: center;
      gap: 12px;
      font-size: 1.5rem;
      font-weight: 700;
      background: linear-gradient(135deg, #58a6ff 0%, #7877c6 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      text-decoration: none;
      transition: all 0.3s ease;
    }

    .brand:hover {
      transform: scale(1.02);
    }

    .user-section {
      display: flex;
      align-items: center;
      gap: 20px;
    }

    .welcome-text {
      color: rgba(255, 255, 255, 0.8);
      font-weight: 500;
      font-size: 0.95rem;
    }

    .btn-logout {
      padding: 10px 20px;
      background: rgba(88, 166, 255, 0.1);
      border: 1px solid rgba(88, 166, 255, 0.3);
      color: #58a6ff;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 600;
      font-size: 0.9rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .btn-logout:hover {
      background: rgba(88, 166, 255, 0.2);
      border-color: #58a6ff;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(88, 166, 255, 0.3);
    }

    /* Container */
    .container {
      max-width: 1400px;
      margin: 0 auto;
      padding: 48px 32px;
    }

    /* Hero Section */
    .hero {
      text-align: center;
      margin-bottom: 56px;
    }

    h1 {
      font-size: 3.5rem;
      font-weight: 800;
      margin-bottom: 16px;
      background: linear-gradient(135deg, #fff 0%, rgba(255, 255, 255, 0.7) 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      letter-spacing: -1.5px;
    }

    .subtitle {
      font-size: 1.2rem;
      color: rgba(255, 255, 255, 0.6);
      font-weight: 400;
    }

    /* Search Section */
    .search-section {
      max-width: 800px;
      margin: 0 auto 48px;
      background: rgba(255, 255, 255, 0.03);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      padding: 32px;
      border-radius: 20px;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .search-form {
      display: flex;
      gap: 12px;
    }

    .search-input {
      flex: 1;
      padding: 16px 20px;
      border: 1px solid rgba(255, 255, 255, 0.15);
      border-radius: 12px;
      font-size: 1rem;
      background: rgba(255, 255, 255, 0.05);
      color: #fff;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      font-family: inherit;
    }

    .search-input::placeholder {
      color: rgba(255, 255, 255, 0.4);
    }

    .search-input:focus {
      outline: none;
      border-color: #58a6ff;
      background: rgba(255, 255, 255, 0.08);
      box-shadow: 0 0 0 4px rgba(88, 166, 255, 0.15);
    }

    .btn-search {
      padding: 16px 32px;
      background: linear-gradient(135deg, #58a6ff 0%, #7877c6 100%);
      color: white;
      border: none;
      border-radius: 12px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 4px 16px rgba(88, 166, 255, 0.3);
      white-space: nowrap;
    }

    .btn-search:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(88, 166, 255, 0.4);
    }

    /* Alert */
    .alert {
      max-width: 800px;
      margin: 0 auto 32px;
      padding: 16px 20px;
      border-radius: 12px;
      background: rgba(255, 165, 0, 0.1);
      border: 1px solid rgba(255, 165, 0, 0.3);
      color: #ffa500;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .alert-info {
      background: rgba(88, 166, 255, 0.1);
      border-color: rgba(88, 166, 255, 0.3);
      color: #58a6ff;
    }

    /* Movies Grid */
    .movies-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
      gap: 32px;
    }

    .movie-card {
      background: rgba(255, 255, 255, 0.03);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 16px;
      overflow: hidden;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) backwards;
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.3);
    }

    .movie-card:nth-child(1) { animation-delay: 0.05s; }
    .movie-card:nth-child(2) { animation-delay: 0.1s; }
    .movie-card:nth-child(3) { animation-delay: 0.15s; }
    .movie-card:nth-child(4) { animation-delay: 0.2s; }
    .movie-card:nth-child(5) { animation-delay: 0.25s; }
    .movie-card:nth-child(6) { animation-delay: 0.3s; }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .movie-card:hover {
      transform: translateY(-8px);
      border-color: rgba(88, 166, 255, 0.3);
      box-shadow: 0 12px 48px rgba(88, 166, 255, 0.2);
    }

    .movie-poster {
      width: 100%;
      height: 400px;
      object-fit: cover;
      display: block;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    }

    .movie-body {
      padding: 24px;
    }

    .movie-title {
      font-size: 1.4rem;
      font-weight: 700;
      color: #fff;
      margin-bottom: 8px;
      line-height: 1.3;
      letter-spacing: -0.3px;
    }

    .movie-year {
      color: rgba(255, 255, 255, 0.6);
      font-size: 0.95rem;
      margin-bottom: 20px;
    }

    .movie-actions {
      display: flex;
      flex-wrap: wrap;
      gap: 10px;
    }

    .btn {
      padding: 10px 18px;
      border: none;
      border-radius: 8px;
      font-size: 0.9rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      text-decoration: none;
      display: inline-block;
      font-family: inherit;
    }

    .btn-add {
      background: rgba(46, 204, 113, 0.15);
      border: 1px solid rgba(46, 204, 113, 0.3);
      color: #2ecc71;
    }

    .btn-add:hover {
      background: rgba(46, 204, 113, 0.25);
      border-color: #2ecc71;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(46, 204, 113, 0.3);
    }

    .btn-review {
      background: rgba(155, 89, 182, 0.15);
      border: 1px solid rgba(155, 89, 182, 0.3);
      color: #9b59b6;
    }

    .btn-review:hover {
      background: rgba(155, 89, 182, 0.25);
      border-color: #9b59b6;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(155, 89, 182, 0.3);
    }

    .btn-read {
      background: rgba(88, 166, 255, 0.15);
      border: 1px solid rgba(88, 166, 255, 0.3);
      color: #58a6ff;
    }

    .btn-read:hover {
      background: rgba(88, 166, 255, 0.25);
      border-color: #58a6ff;
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(88, 166, 255, 0.3);
    }

    @media (max-width: 768px) {
      .navbar-content {
        padding: 0 20px;
      }

      .container {
        padding: 32px 20px;
      }

      h1 {
        font-size: 2.5rem;
      }

      .search-section {
        padding: 24px;
      }

      .search-form {
        flex-direction: column;
      }

      .movies-grid {
        grid-template-columns: 1fr;
        gap: 24px;
      }
    }
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="navbar-content">
      <a href="/" class="brand">
        <span>üé¨</span>
        <span>Movie Meter</span>
      </a>
      <div class="user-section">
        <span class="welcome-text">{{username}}</span>
        <a href="/logout" class="btn-logout">Sign Out</a>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="hero">
      <h1>Discover Movies</h1>
      <p class="subtitle">Find and review your favorite films</p>
    </div>

    <div class="search-section">
      <form action="/discover" method="GET" class="search-form">
        <input type="text" name="title" class="search-input" placeholder="Search for movies..." required />
        <button class="btn-search" type="submit">Search</button>
      </form>
    </div>

    {{#if message}}
    <div class="alert">
      <span>‚ÑπÔ∏è</span>
      <span>{{message}}</span>
    </div>
    {{/if}}

    {{#if results}}
    <div class="movies-grid">
      {{#each results}}
      <div class="movie-card">
        <img src="{{#if Poster}}{{Poster}}{{else}}/images/default-poster.jpg{{/if}}" class="movie-poster" alt="{{Title}}" />
        <div class="movie-body">
          <h3 class="movie-title">{{Title}}</h3>
          <p class="movie-year">{{Year}}</p>
          
          <div class="movie-actions">
            <form action="/movies/add" method="POST" style="display: inline;">
              <input type="hidden" name="title" value="{{Title}}">
              <input type="hidden" name="year" value="{{Year}}">
              <button type="submit" class="btn btn-add">Add Movie</button>
            </form>
            
            <form action="/reviews/new" method="GET" style="display: inline;">
              <input type="hidden" name="title" value="{{Title}}">
              <button type="submit" class="btn btn-review">Write Review</button>
            </form>

            <a href="/reviews?title={{Title}}" class="btn btn-read">Read Reviews</a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    {{else}}
    <div class="alert alert-info">
      <span>üé¨</span>
      <span>No movies found. Try searching for your favorite films!</span>
    </div>
    {{/if}}
  </div>
</body>
</html>
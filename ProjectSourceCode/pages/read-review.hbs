<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Reviews - Movie Meter</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">üé¨ Movie Meter</a>
            <span class="text-light">Welcome, {{username}}!</span>
        </div>
    </nav>

    <div class="container mt-4">
        <h2>Reviews for {{title}}</h2>

        {{#if message}}
        <p class="alert alert-info">{{message}}</p>
        {{/if}}

        {{#if reviews.length}}
        {{#each reviews}}
        <div class="card mb-3">
            <div class="card-body">
                <h5>‚≠ê Rating: {{rating}} / 10</h5>
                <p>{{review_text}}</p>
                <small class="text-muted">By: {{username}}</small>
            </div>
        </div>
        {{/each}}
        {{/if}}

        <a href="/discover" class="btn btn-secondary">Back</a>
    </div>

</body>

</html>
<head>
    <style>
        body {
            background-color: #111;
            color: #eee;
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
        }

        .card {
            background: #1a1a1a;
            border: 1px solid #333;
            border-radius: 10px;
            padding: 16px;
            margin-bottom: 20px;
        }

        .card-header {
            padding-bottom: 10px;
            border-bottom: 1px solid #333;
            margin-bottom: 12px;
        }

        .btn-sm {
            padding: 6px 12px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 0.85rem;
        }

        .btn-primary {
            background-color: #2e8bff;
            border: none;
            color: white;
        }

        .btn-outline-primary {
            background: transparent;
            border: 1px solid #2e8bff;
            color: #2e8bff;
        }

        .list-group {
            list-style: none;
            padding: 0;
        }

        .list-group-item {
            padding: 10px;
            background: #1e1e1e;
            border-bottom: 1px solid #2b2b2b;
        }

        .list-group-item:last-child {
            border-bottom: none;
        }

        .text-muted {
            color: #999;
        }

        h5 {
            font-size: 1.1rem;
            margin: 0;
        }
    </style>
</head>

<div class="container mt-4">


  <!-- Watchlist section -->
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0">My Watchlist</h5>
    </div>
    <div class="card-body">
      {{#if watchlist.length}}
        <ul class="list-group">
          {{#each watchlist}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span>
                {{this.title}}
                {{#if this.release_year}} ({{this.release_year}}){{/if}}
              </span>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p class="text-muted mb-0">
          Your watchlist is empty. Add movies from the Discover page.
        </p>
      {{/if}}
    </div>
  </div>

  <!-- My Reviews section -->
  <div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0">My Reviews</h5>
      <div>
        <small class="me-2">Sort by:</small>
        <a 
          href="/profile?sort=rating_desc" 
          class="btn btn-sm {{#if (eq sort "rating_desc")}}btn-primary{{else}}btn-outline-primary{{/if}}"
        >
          Top Rated
        </a>
        <a 
          href="/profile?sort=rating_asc" 
          class="btn btn-sm {{#if (eq sort "rating_asc")}}btn-primary{{else}}btn-outline-primary{{/if}}"
        >
          Lowest Rated
        </a>
      </div>
    </div>
    <div class="card-body">
      {{#if reviews.length}}
        <p class="text-muted mb-2">Currently: {{sortLabel}}</p>
        <ul class="list-group">
          {{#each reviews}}
            <li class="list-group-item">
              <div class="d-flex justify-content-between">
                <div>
                  <strong>{{this.title}}</strong>
                  {{#if this.release_year}} ({{this.release_year}}){{/if}}
                </div>
                <span><strong>Rating:</strong> {{this.rating}} / 10</span>
              </div>
              {{#if this.review_text}}
                <p class="mb-0 mt-2">{{this.review_text}}</p>
              {{/if}}
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p class="text-muted mb-0">
          You haven't written any reviews yet.
        </p>
      {{/if}}
    </div>
  </div>

  <!-- Top Movies section (Top 10 reviewed by this user) -->
  <div class="card mb-4">
    <div class="card-header">
      <h5 class="mb-0">Top Rated Movies I've Reviewed</h5>
    </div>
    <div class="card-body">
      {{#if topMovies.length}}
        <ul class="list-group">
          {{#each topMovies}}
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div>
                <strong>{{this.title}}</strong>
                {{#if this.release_year}} ({{this.release_year}}){{/if}}
                <br>
                <small class="text-muted">
                  Based on {{this.review_count}} review{{#unless (eq this.review_count 1)}}s{{/unless}}
                </small>
              </div>
              <span>
                <strong>Avg Rating:</strong> {{this.avg_rating}}
              </span>
            </li>
          {{/each}}
        </ul>
      {{else}}
        <p class="text-muted mb-0">
          You haven't reviewed any movies yet, so no top list to show.
        </p>
      {{/if}}
    </div>
  </div>

</div>

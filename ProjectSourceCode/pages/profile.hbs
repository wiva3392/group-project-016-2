<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile - Movie Meter</title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --bg-primary: #23272f;
      --bg-secondary: #282c34;
      --bg-tertiary: #2d323b;
      --text-primary: #ffffff;
      --text-secondary: #8c92a4;
      --accent-blue: #61dafb;
      --accent-purple: #c792ea;
      --border-color: #3d4451;
      --hover-bg: #343943;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', sans-serif;
      background: var(--bg-primary);
      color: var(--text-primary);
      line-height: 1.6;
    }

    /* Navbar */
    .navbar {
      background: var(--bg-secondary);
      border-bottom: 1px solid var(--border-color);
      padding: 1rem 0;
      position: sticky;
      top: 0;
      z-index: 100;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .navbar-content {
      max-width: 1280px;
      margin: 0 auto;
      padding: 0 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .brand {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--accent-blue);
      text-decoration: none;
      transition: transform 0.2s;
    }

    .brand:hover {
      transform: translateY(-2px);
    }

    .nav-links {
      display: flex;
      gap: 1.5rem;
      align-items: center;
    }

    .nav-link {
      color: var(--text-secondary);
      text-decoration: none;
      font-weight: 500;
      transition: color 0.2s;
      padding: 0.5rem 1rem;
      border-radius: 6px;
    }

    .nav-link:hover {
      color: var(--accent-blue);
      background: var(--hover-bg);
    }

    /* Container */
    .container {
      max-width: 1280px;
      margin: 0 auto;
      padding: 3rem 2rem;
    }

    /* Hero Section */
    .hero {
      text-align: center;
      margin-bottom: 3rem;
      padding: 3rem 2rem;
      background: linear-gradient(135deg, var(--bg-secondary), var(--bg-tertiary));
      border-radius: 16px;
      border: 1px solid var(--border-color);
    }

    .hero h1 {
      font-size: 3rem;
      font-weight: 800;
      margin-bottom: 0.5rem;
      background: linear-gradient(135deg, var(--accent-blue), var(--accent-purple));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .hero-subtitle {
      color: var(--text-secondary);
      font-size: 1.1rem;
    }

    /* Card Styles */
    .card {
      background: var(--bg-secondary);
      border: 1px solid var(--border-color);
      border-radius: 12px;
      padding: 2rem;
      margin-bottom: 2rem;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .card:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 40px rgba(97, 218, 251, 0.1);
    }

    .card-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 1.5rem;
      padding-bottom: 1rem;
      border-bottom: 1px solid var(--border-color);
    }

    .card-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--accent-blue);
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    /* Sort Buttons */
    .sort-controls {
      display: flex;
      gap: 0.5rem;
    }

    .btn-sort {
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-size: 0.9rem;
      font-weight: 600;
      text-decoration: none;
      transition: all 0.2s;
      border: 1px solid var(--border-color);
      background: var(--bg-tertiary);
      color: var(--text-secondary);
    }

    .btn-sort:hover {
      background: var(--hover-bg);
      color: var(--accent-blue);
      border-color: var(--accent-blue);
    }

    .btn-sort.active {
      background: var(--accent-blue);
      color: var(--bg-primary);
      border-color: var(--accent-blue);
    }

    /* List Styles */
    .item-list {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .list-item {
      background: var(--bg-tertiary);
      padding: 1.25rem;
      border-radius: 8px;
      border-left: 3px solid var(--accent-blue);
      transition: all 0.2s;
    }

    .list-item:hover {
      background: var(--hover-bg);
      transform: translateX(4px);
    }

    .item-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 0.75rem;
    }

    .item-title {
      font-weight: 600;
      font-size: 1.1rem;
    }

    .item-year {
      color: var(--text-secondary);
      font-size: 0.9rem;
    }

    .rating-badge {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      background: linear-gradient(135deg, var(--accent-blue), var(--accent-purple));
      color: white;
      padding: 0.5rem 1rem;
      border-radius: 6px;
      font-weight: 700;
      font-size: 0.95rem;
    }

    .review-text {
      color: var(--text-secondary);
      margin-top: 0.75rem;
      padding-left: 1rem;
      border-left: 2px solid var(--border-color);
      font-style: italic;
    }

    .empty-state {
      text-align: center;
      padding: 3rem 2rem;
      color: var(--text-secondary);
    }

    .empty-state-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
      opacity: 0.5;
    }

    .stat-badge {
      display: inline-block;
      background: var(--bg-primary);
      padding: 0.25rem 0.75rem;
      border-radius: 4px;
      font-size: 0.85rem;
      color: var(--text-secondary);
    }

    /* Responsive */
    @media (max-width: 768px) {
      .container {
        padding: 2rem 1rem;
      }

      .hero h1 {
        font-size: 2rem;
      }

      .card {
        padding: 1.5rem;
      }

      .card-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }

      .sort-controls {
        width: 100%;
        flex-direction: column;
      }

      .btn-sort {
        width: 100%;
      }
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar">
    <div class="navbar-content">
      <a href="/" class="brand">
        <span>üé¨</span>
        <span>Movie Meter</span>
      </a>
      <div class="nav-links">
        <a href="/discover" class="nav-link">Discover</a>
        <a href="/profile" class="nav-link">Profile</a>
        <a href="/logout" class="nav-link">Sign Out</a>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="container">
    <!-- Hero Section -->
    <div class="hero">
      <h1>{{username}}'s Profile</h1>
      <p class="hero-subtitle">Track your favorite movies and reviews</p>
    </div>

    <!-- Watchlist Section -->
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">
          <span>üìö</span>
          <span>My Watchlist</span>
        </h2>
      </div>
      {{#if watchlist.length}}
        <div class="item-list">
          {{#each watchlist}}
            <div class="list-item">
              <div class="item-header">
                <span class="item-title">{{this.title}}</span>
                {{#if this.release_year}}
                  <span class="item-year">({{this.release_year}})</span>
                {{/if}}
              </div>
            </div>
          {{/each}}
        </div>
      {{else}}
        <div class="empty-state">
          <div class="empty-state-icon">üé¨</div>
          <p>Your watchlist is empty. Add movies from the Discover page.</p>
        </div>
      {{/if}}
    </div>

    <!-- My Reviews Section -->
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">
          <span>‚úçÔ∏è</span>
          <span>My Reviews</span>
        </h2>
        <div class="sort-controls">
          <a href="/profile?sort=rating_desc" 
             class="btn-sort {{#if (eq sort 'rating_desc')}}active{{/if}}">
            Highest Rated
          </a>
          <a href="/profile?sort=rating_asc" 
             class="btn-sort {{#if (eq sort 'rating_asc')}}active{{/if}}">
            Lowest Rated
          </a>
        </div>
      </div>
      {{#if reviews.length}}
        <div class="item-list">
          {{#each reviews}}
            <div class="list-item">
              <div class="item-header">
                <div>
                  <span class="item-title">{{this.title}}</span>
                  {{#if this.release_year}}
                    <span class="item-year"> ({{this.release_year}})</span>
                  {{/if}}
                </div>
                <span class="rating-badge">
                  <span>‚≠ê</span>
                  <span>{{this.rating}}/10</span>
                </span>
              </div>
              {{#if this.review_text}}
                <div class="review-text">{{this.review_text}}</div>
              {{/if}}
            </div>
          {{/each}}
        </div>
      {{else}}
        <div class="empty-state">
          <div class="empty-state-icon">üí≠</div>
          <p>You haven't written any reviews yet.</p>
        </div>
      {{/if}}
    </div>

    <!-- Top Movies Section -->
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">
          <span>üèÜ</span>
          <span>Top Rated Movies</span>
        </h2>
      </div>
      {{#if topMovies.length}}
        <div class="item-list">
          {{#each topMovies}}
            <div class="list-item">
              <div class="item-header">
                <div>
                  <span class="item-title">{{this.title}}</span>
                  {{#if this.release_year}}
                    <span class="item-year"> ({{this.release_year}})</span>
                  {{/if}}
                  <br>
                  <span class="stat-badge">
                    {{this.review_count}} review{{#unless (eq this.review_count 1)}}s{{/unless}}
                  </span>
                </div>
                <span class="rating-badge">
                  <span>‚≠ê</span>
                  <span>{{this.avg_rating}}</span>
                </span>
              </div>
            </div>
          {{/each}}
        </div>
      {{else}}
        <div class="empty-state">
          <div class="empty-state-icon">üéØ</div>
          <p>You haven't reviewed any movies yet.</p>
        </div>
      {{/if}}
    </div>
  </div>
</body>
</html>
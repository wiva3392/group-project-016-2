<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Write Review - Movie Meter</title>
  <style>
    :root {
      --bg-primary: #23272f;
      --bg-secondary: #282c34;
      --bg-tertiary: #2d323b;
      --text-primary: #ffffff;
      --text-secondary: #8c92a4;
      --accent-blue: #61dafb;
      --accent-purple: #c792ea;
      --border-color: #3d4451;
      --hover-bg: #343943;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', sans-serif;
      background: var(--bg-primary);
      color: var(--text-primary);
      min-height: 100vh;
      padding: 2rem 1rem;
    }

    .container {
      max-width: 800px;
      margin: 0 auto;
      animation: fadeIn 0.6s ease-out;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .header {
      text-align: center;
      margin-bottom: 3rem;
      padding-bottom: 2rem;
      border-bottom: 1px solid var(--border-color);
    }

    h2 {
      font-size: 2.5rem;
      font-weight: 800;
      margin-bottom: 1rem;
      background: linear-gradient(135deg, var(--accent-blue), var(--accent-purple));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .movie-badge {
      display: inline-block;
      background: var(--bg-secondary);
      border: 1px solid var(--accent-blue);
      color: var(--accent-blue);
      padding: 0.625rem 1.25rem;
      border-radius: 8px;
      font-size: 1.1rem;
      font-weight: 600;
      transition: all 0.2s;
    }

    .movie-badge:hover {
      background: rgba(97, 218, 251, 0.1);
      transform: translateY(-2px);
    }

    .form-card {
      background: var(--bg-secondary);
      border: 1px solid var(--border-color);
      border-radius: 12px;
      padding: 2.5rem;
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
    }

    .form-group {
      margin-bottom: 2rem;
    }

    label {
      display: block;
      margin-bottom: 0.75rem;
      color: var(--text-primary);
      font-weight: 600;
      font-size: 1rem;
    }

    input[type="number"],
    textarea {
      width: 100%;
      padding: 1rem 1.25rem;
      border: 1px solid var(--border-color);
      border-radius: 8px;
      font-size: 1rem;
      background: var(--bg-tertiary);
      color: var(--text-primary);
      transition: all 0.2s;
      font-family: inherit;
    }

    input[type="number"]::placeholder,
    textarea::placeholder {
      color: var(--text-secondary);
    }

    input[type="number"]:focus,
    textarea:focus {
      outline: none;
      border-color: var(--accent-blue);
      background: var(--bg-primary);
      box-shadow: 0 0 0 4px rgba(97, 218, 251, 0.1);
    }

    textarea {
      resize: vertical;
      min-height: 150px;
      line-height: 1.6;
    }

    .help-text {
      font-size: 0.85rem;
      color: var(--text-secondary);
      margin-top: 0.5rem;
    }

    .rating-preview {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      margin-top: 0.75rem;
      padding: 0.75rem;
      background: var(--bg-primary);
      border-radius: 6px;
      font-weight: 600;
    }

    .rating-stars {
      color: var(--accent-blue);
      font-size: 1.25rem;
    }

    .char-count {
      float: right;
      font-size: 0.85rem;
      color: var(--text-secondary);
    }

    .button-group {
      display: flex;
      gap: 1rem;
      margin-top: 2rem;
    }

    .btn {
      flex: 1;
      padding: 1rem;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      transition: all 0.2s;
      text-decoration: none;
      text-align: center;
      font-family: inherit;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
    }

    .btn-primary {
      background: linear-gradient(135deg, var(--accent-blue), var(--accent-purple));
      color: white;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 24px rgba(97, 218, 251, 0.3);
    }

    .btn-secondary {
      background: var(--bg-tertiary);
      border: 1px solid var(--border-color);
      color: var(--text-secondary);
    }

    .btn-secondary:hover {
      background: var(--hover-bg);
      border-color: var(--text-secondary);
      color: var(--text-primary);
    }

    .btn:active {
      transform: translateY(0);
    }

    @media (max-width: 600px) {
      .form-card {
        padding: 1.5rem;
      }

      h2 {
        font-size: 2rem;
      }

      .button-group {
        flex-direction: column;
      }
    }

    /* Character counter animation */
    @keyframes warningPulse {
      0%, 100% { color: var(--text-secondary); }
      50% { color: var(--accent-purple); }
    }

    .char-count.warning {
      animation: warningPulse 1s infinite;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h2>Write Your Review</h2>
      <div class="movie-badge">{{title}}</div>
    </div>

    <div class="form-card">
      <form action="/reviews/add" method="POST" id="reviewForm">
        <input type="hidden" name="title" value="{{title}}" />

        <div class="form-group">
          <label for="rating">Rating</label>
          <input
            type="number"
            id="rating"
            name="rating"
            min="1"
            max="10"
            required
            placeholder="1-10"
          />
          <div class="rating-preview" id="ratingPreview" style="display: none;">
            <span class="rating-stars">★</span>
            <span id="ratingText"></span>
          </div>
          <div class="help-text">Rate from 1 (poor) to 10 (masterpiece)</div>
        </div>

        <div class="form-group">
          <label for="review_text">
            Your Thoughts
            <span class="char-count" id="charCount">0 / 200</span>
          </label>
          <textarea
            id="review_text"
            name="review_text"
            maxlength="200"
            required
            placeholder="Share what you thought about this movie..."
          ></textarea>
        </div>

        <div class="button-group">
          <button type="submit" class="btn btn-primary">
            <span>✓</span>
            <span>Publish Review</span>
          </button>
          <a href="/discover" class="btn btn-secondary">
            <span>×</span>
            <span>Cancel</span>
          </a>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Rating preview
    const ratingInput = document.getElementById('rating');
    const ratingPreview = document.getElementById('ratingPreview');
    const ratingText = document.getElementById('ratingText');

    ratingInput.addEventListener('input', (e) => {
      const value = e.target.value;
      if (value >= 1 && value <= 10) {
        ratingPreview.style.display = 'flex';
        ratingText.textContent = `${value} / 10`;
      } else {
        ratingPreview.style.display = 'none';
      }
    });

    // Character counter
    const textarea = document.getElementById('review_text');
    const charCount = document.getElementById('charCount');

    textarea.addEventListener('input', (e) => {
      const length = e.target.value.length;
      charCount.textContent = `${length} / 200`;
      
      if (length > 180) {
        charCount.classList.add('warning');
      } else {
        charCount.classList.remove('warning');
      }
    });
  </script>
</body>
</html>
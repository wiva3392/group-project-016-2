<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Add Review</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body class="bg-light">

    <div class="container mt-4">
        <h2>Add Review for {{movie_title}}</h2>

        <form action="/reviews/add" method="POST">
            <input type="hidden" name="movie_id" value="{{movie_id}}" />
            <input type="hidden" name="title" value="{{title}}" />


            <div class="mb-3">
                <label class="form-label">Rating (1â€“10)</label>
                <input type="number" name="rating" class="form-control" min="1" max="10" required />
            </div>

            <div class="mb-3">
                <label class="form-label">Review</label>
                <textarea name="review_text" class="form-control" rows="3" maxlength="200" required></textarea>
            </div>

            <button type="submit" class="btn btn-success">Submit Review</button>
            <a href="/discover" class="btn btn-secondary">Cancel</a>
        </form>
    </div>

</body>

</html>